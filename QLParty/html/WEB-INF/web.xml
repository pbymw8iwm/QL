<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <display-name>html</display-name>
  <filter>
    <filter-name>AppframeFrontFilter</filter-name>
    <filter-class>com.ai.appframe2.web.filter.LoginFilter</filter-class>
  </filter>
  <filter>
    <filter-name>ExpireResponseHeaderFilter</filter-name>
    <filter-class>com.ai.appframe2.web.filter.expire.ExpireResponseHeaderFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AppframeFrontFilter</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AppframeFrontFilter</filter-name>
    <url-pattern>/business/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>ExpireResponseHeaderFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <listener>
    <listener-class>com.ai.appframe2.web.BaseListenerServer</listener-class>
  </listener>
  <servlet>
    <servlet-name>CentralControl</servlet-name>
    <servlet-class>com.ai.appframe2.web.action.CentralControlServlet</servlet-class>
  </servlet>
  <servlet>
    <description>微信接口</description>
    <display-name>微信接口</display-name>
    <servlet-name>WeiXin</servlet-name>
    <servlet-class>com.ql.wechat.WechatServlet</servlet-class>
  </servlet>
  <servlet>
    <description>微信初始化接口</description>
    <display-name>微信初始化接口</display-name>
    <servlet-name>WechatInit</servlet-name>
    <servlet-class>com.ql.wechat.WechatInitServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>CentralControl</servlet-name>
    <url-pattern>/business/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>WeiXin</servlet-name>
    <url-pattern>/weixin</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>WechatInit</servlet-name>
    <url-pattern>/wechat/token</url-pattern>
  </servlet-mapping>
  
  <session-config>
        <session-timeout>480</session-timeout>
    </session-config>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>

